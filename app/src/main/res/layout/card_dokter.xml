<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient5"
            android:padding="20dp">

            <ImageView
                android:id="@+id/gambar_dokter"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@drawable/dokter"
                android:contentDescription="@string/menu_dokter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/nama_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama dokter"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/poli_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama poli"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/jadwal_praktik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senin | 18.00"
                android:fontFamily="sans-serif-light"
                android:textSize="13sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>